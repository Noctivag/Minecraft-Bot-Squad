# Minecraft Bot Squad - Environment Configuration

# ======================
# Server Configuration
# ======================

# Minecraft server host (IP or domain)
MC_HOST=localhost

# Minecraft server port
MC_PORT=25565

# ======================
# Proxy Network Settings
# ======================

# Backend server name for proxy networks (BungeeCord/Velocity)
# Leave empty if not using a proxy network
# Examples: survival, creative, lobby, minigames
MC_BACKEND_SERVER=

# ======================
# Authentication
# ======================

# Authentication type: offline, microsoft, or mojang
# offline: No authentication (for cracked servers)
# microsoft: Microsoft account (required for most premium servers)
# mojang: Legacy Mojang account (deprecated)
AUTH_TYPE=offline

# Path to authentication cache directory (for Microsoft auth)
AUTH_CACHE_DIR=./auth_cache

# ======================
# Bot Configuration
# ======================

# Number of bots to create
BOT_COUNT=3

# Delay between bot connections (milliseconds)
BOT_STAGGER_DELAY=3000

# ======================
# Reconnection Settings
# ======================

# Enable automatic reconnection
RECONNECT_ENABLED=true

# Initial reconnect delay (milliseconds)
RECONNECT_BASE_DELAY=2000

# Maximum reconnect delay (milliseconds)
RECONNECT_MAX_DELAY=60000

# Exponential backoff factor
RECONNECT_FACTOR=2

# Add random jitter to delays
RECONNECT_JITTER=true

# Maximum reconnect attempts (-1 for unlimited)
RECONNECT_MAX_ATTEMPTS=-1

# ======================
# Logging Configuration
# ======================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable chat message logging
LOG_CHAT=true

# Enable event logging
LOG_EVENTS=true

# Log file path (leave empty for console only)
LOG_FILE=

# Use colored output in console
LOG_COLORS=true

# ======================
# Advanced Settings
# ======================

# Autonomous behavior tick interval (milliseconds)
AUTONOMOUS_TICK_INTERVAL=5000

# Auto-respawn on death
AUTO_RESPAWN=true

# Sprint by default when moving
SPRINT_BY_DEFAULT=false

# ======================
# LLM Configuration (for AI features)
# ======================

# Ollama API endpoint
OLLAMA_BASE_URL=http://localhost:11434

# Ollama model to use
OLLAMA_MODEL=llama3.2

# Google Gemini API Key (for coordinator)
GEMINI_API_KEY=

# ======================
# Database Configuration
# ======================

# SQLite database path for bot memory
DB_PATH=./data/bot_memory.db

# Knowledge base path
KNOWLEDGE_PATH=./data/knowledge

# ======================
# Coordination Server
# ======================

# HTTP API port for coordination server
COORDINATOR_PORT=3000

# Enable coordination server
COORDINATOR_ENABLED=true

# ======================
# Development Settings
# ======================

# Hide connection errors
HIDE_ERRORS=false

# Debug mode
DEBUG=false

# Node environment
NODE_ENV=production
